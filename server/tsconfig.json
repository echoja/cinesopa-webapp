{
  "compilerOptions": {
    "incremental": true,
    "checkJs": true,
    "baseUrl": ".",
    "module": "CommonJS",
    "target": "esnext",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "src/@types"],
    "sourceMap": true,
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["config/*"]
    },
    "outDir": "ts-build",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "files": ["src/@types/graphql.d.ts"],
  "include": ["src/**/*", "config/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.js"]
}
