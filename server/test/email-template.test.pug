mixin mtable
  //- table(class!=attributes.class border="0" cellpadding="0" cellspacing="0" width=attributes.width ? attributes.width : "100%")&attributes(attributes)
  table(class!=attributes.class border="0" cellpadding="0" cellspacing="0" width="100%")&attributes(attributes)
    block


mixin tableBody
