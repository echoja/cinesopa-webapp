{
  "ext": "js,json,graphql,ts",
  "watch": ["./src/**/*.ts", "./src/**/*.js", "./src/**/*.graphql"],
  "ignore": ["./src/**/*.spec.ts", "./src/**/*.spec.js"],
  "exec": "copyfiles ./**/*.graphql ./ts-build && ts-node-dev -r tsconfig-paths/register --files ./src/index.js --inspect",
  "env": {
    "NODE_ENV": "development"
  }
}

